% Beamer color theme for Koalab
% By Uriel ``Korfuri'' Corfa <uriel@corfa.fr>

\definecolor{darkblue}{rgb}{0,0,.5}
\definecolor{lightred}{rgb}{1,.7,.7}
\definecolor{lightgreen}{rgb}{.7,1,.7}
\definecolor{lightgray}{rgb}{.7,.7,.7}
\definecolor{titlegreen}{rgb}{.3,1,.3}

\setbeamercolor{title}{fg=white}
\setbeamercolor{subtitle}{fg=white}
\setbeamercolor{author}{fg=darkgray}
\setbeamercolor{date}{fg=black}
\setbeamercolor{section title}{fg=white}
\setbeamercolor{titlelike}{fg=darkblue}
\setbeamercolor{section in toc}{fg=white}
\setbeamercolor{section in toc shaded}{fg=black}
\setbeamercolor{block body}{fg=black,bg=lightgray}
\setbeamercolor{block body alerted}{fg=black,bg=lightred}
\setbeamercolor{block body example}{fg=black,bg=lightgreen}
\setbeamercolor{block title}{fg=black,bg=gray}
\setbeamercolor{block title alerted}{fg=black,bg=red}
\setbeamercolor{block title example}{fg=black,bg=titlegreen}

\setbeamercolor{important text}{fg=white}

% These colors are used by listings
\definecolor{colKeys}{rgb}{0,0,1} % keywords
\definecolor{colIdentifier}{rgb}{0,0,0} % identifiers
\definecolor{colComments}{rgb}{0,0.3,0.5} % comments
\definecolor{colString}{rgb}{0.6,0.1,0.1} % strings

\mode<presentation>
